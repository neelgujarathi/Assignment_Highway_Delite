<%- layout('/layouts/boilderplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <!-- Left Section -->
    <div class="col-lg-8">
      <!-- Image Card -->
      <div class="position-relative mb-3">
        <img
          src="<%= data.image.url %>"
          class="img-fluid w-100 rounded-top"
          alt="<%= data.title %>"
          style="
            max-height: 400px;
            object-fit: cover;
            border: 3px solid #00c853;
          "
        />
        <% if (data.owner) { %>
        <span
          class="position-absolute top-0 start-0 m-2 badge bg-warning text-dark px-3 py-2"
        >
          <%= data.owner.username %>
        </span>
        <% } %>
      </div>

      <!-- Activity Title and Info -->
      <h3 class="fw-bold"><%= data.title %></h3>
      <p class="text-muted">
        Curated small-group experience. Certified guide. Safety first with gear
        included. Helmet and life jackets along with an expert will accompany in
        <%= data.title.toLowerCase() %>.
      </p>

      <!-- Choose Date -->
      <div class="mt-4">
        <h6 class="fw-semibold">Choose date</h6>
        <div class="d-flex flex-wrap gap-2 mt-2">
          <button class="btn btn-warning text-dark fw-semibold px-3 py-2">
            Oct 22
          </button>
          <button class="btn btn-outline-secondary px-3 py-2">Oct 23</button>
          <button class="btn btn-outline-secondary px-3 py-2">Oct 24</button>
          <button class="btn btn-outline-secondary px-3 py-2">Oct 25</button>
          <button class="btn btn-outline-secondary px-3 py-2">Oct 26</button>
        </div>
      </div>

      <!-- Choose Time -->
      <div class="mt-4">
        <h6 class="fw-semibold">Choose time</h6>
        <div class="d-flex flex-wrap gap-2 mt-2">
          <button class="btn btn-outline-secondary position-relative px-3 py-2">
            07:00 am
            <br />
            <span class="text-danger small position-absolute end-0 me-2"
              >4 left</span
            >
          </button>
          <button class="btn btn-outline-secondary position-relative px-3 py-2">
            09:00 am
            <br /><span class="text-danger small position-absolute end-0 me-2"
              >2 left</span
            >
          </button>
          <button class="btn btn-outline-secondary position-relative px-3 py-2">
            11:00 am
            <br /><span class="text-danger small position-absolute end-0 me-2"
              >5 left</span
            >
          </button>
          <button
            class="btn btn-outline-secondary text-muted px-3 py-2"
            disabled
          >
            1:00 pm &nbsp; Sold out
          </button>
        </div>
        <small class="text-muted d-block mt-2"
          >All times are in IST (GMT +5:30)</small
        >
      </div>

      <!-- About -->
      <div class="mt-4">
        <h6 class="fw-semibold">About</h6>
        <p class="text-muted">
          Scenic routes, trained guides, and safety briefing. Minimum age 10.
        </p>
        <div
          class="bg-success text-white d-inline-block px-3 py-1 rounded-pill"
        >
          <strong><%= data.owner ? data.owner.username : "Unknown" %></strong>
        </div>
      </div>

      <!-- Extra Info -->
      <div class="mt-4 text-muted">
        <p class="mb-1">Location: <%= data.location %></p>
        <p class="mb-1">Country: <%= data.country %></p>
      </div>

      <% if (currUser && data.owner && currUser._id.equals(data.owner._id)) { %>
      <div class="mt-4 d-flex gap-3">
        <form method="get" action="/listing/edit/<%= data.id %>">
          <button type="submit" class="btn btn-dark">Edit Listing</button>
        </form>
        <form
          method="post"
          action="/listing/delete/<%= data.id %>?_method=DELETE"
        >
          <button type="submit" class="btn btn-outline-dark">
            Delete Listing
          </button>
        </form>
      </div>
      <% } %> <% if (currUser) { %>
      <hr class="mt-5" />
      <h4>Leave a Review</h4>
      <form
        method="post"
        action="/listing/<%= data.id %>/review"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3 mt-3">
          <label class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              name="review[rating]"
              value="1"
              checked
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            required
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">Please add some comment for review</div>
        </div>
        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>

      <hr class="mt-5" />
      <h4>All Reviews</h4>
      <% for (let review of data.reviews) { %>
      <div
        class="card shadow-sm my-3 p-3"
        style="border-left: 4px solid #00c853"
      >
        <h5 class="card-title mb-1"><%= review.author.username %></h5>
        <p
          class="starability-result card-text"
          data-rating="<%= review.rating %>"
        ></p>
        <p class="card-text"><%= review.comment %></p>
        <form
          method="post"
          action="/listing/<%= data._id %>/review/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>

    <!-- Right Section -->
    <div class="col-lg-4">
      <div class="card shadow-sm p-3">
        <div class="card-body">
          <p class="text-muted mb-1">Starts at</p>
          <h4 class="fw-bold mb-3">
            ₹<%= data.price.toLocaleString("en-IN") %>
          </h4>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <span>Quantity</span>
            <div class="d-flex align-items-center border rounded">
              <button id="decreaseQty" class="btn btn-sm btn-light">−</button>
              <span id="quantityValue" class="px-3">1</span>
              <button id="increaseQty" class="btn btn-sm btn-light">+</button>
            </div>
          </div>

          <div class="border-top pt-2 mt-2">
            <p class="d-flex justify-content-between mb-1">
              <span>Subtotal</span>
              <span id="subtotal"
                >₹<%= data.price.toLocaleString("en-IN") %></span
              >
            </p>
            <p class="d-flex justify-content-between mb-1">
              <span>Taxes</span> <span id="tax">₹59</span>
            </p>
            <h5 class="d-flex justify-content-between fw-bold mt-3">
              <span>Total</span>
              <span id="total"
                >₹<%= (data.price + 59).toLocaleString("en-IN") %></span
              >
            </h5>

            <form action="/booking/confirm" method="POST">
              <input type="hidden" name="listingId" value="<%= data._id %>" />
              <input
                type="hidden"
                id="quantityInput"
                name="quantity"
                value="1"
              />
              <button type="submit" class="btn btn-success w-100 mt-3">
                Confirm Booking
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const basePrice = Number("<%= data.price %>");
  let quantity = 1;

  const quantityDisplay = document.getElementById("quantityValue");
  const quantityInput = document.getElementById("quantityInput");
  const subtotalEl = document.getElementById("subtotal");
  const totalEl = document.getElementById("total");
  const tax = 59;

  document.getElementById("increaseQty").addEventListener("click", () => {
    quantity++;
    updatePrice();
  });

  document.getElementById("decreaseQty").addEventListener("click", () => {
    if (quantity > 1) {
      quantity--;
      updatePrice();
    }
  });

  function updatePrice() {
    const subtotal = basePrice * quantity;
    const total = subtotal + tax;
    subtotalEl.textContent = `₹${subtotal.toLocaleString("en-IN")}`;
    totalEl.textContent = `₹${total.toLocaleString("en-IN")}`;
    quantityDisplay.textContent = quantity;
    quantityInput.value = quantity;
  }

  updatePrice();
</script>
