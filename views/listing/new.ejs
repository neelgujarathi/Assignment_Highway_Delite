<%- layout('/layouts/boilderplate.ejs') %>

<br /><br />
<center><h2>Create New Listing</h2></center>
<form
  method="post"
  action="/listing"
  class="needs-validation"
  novalidate
  enctype="multipart/form-data"
>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="mb-3">
        <label class="form-label">Enter Title: </label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Title Should be present!</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Enter Description: </label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Description Should be Short and attractive!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Upload Image: </label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Enter Price:</label>
          <input
            type="text"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price Should be present!</div>
        </div>
        <div class="mb-3 col-8">
          <label>Enter Country: </label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country Should be present!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Enter Location: </label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location Should be present!</div>
      </div>

      <button type="submit" class="btn btn-dark">Add</button>
      <br /><br />
    </div>
  </div>
</form>
