<%- layout('/layouts/boilderplate.ejs') %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h2>SignUp For Wanderlust</h2>
    <br /><br />
    <form method="post" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label">Enter Username: </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Enter Email: </label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label">Enter Password: </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
